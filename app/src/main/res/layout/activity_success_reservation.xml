<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.reservation.SuccessReservationActivity">

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="243dp"
        android:layout_height="388dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/success_reservation_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_sucess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeayy!\nYou've made a successful reservation"
        app:layout_constraintEnd_toEndOf="@id/iv_success"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/iv_success"
        app:layout_constraintTop_toBottomOf="@+id/iv_success" />


    <Button
        android:id="@+id/btn_home"
        android:layout_width="174dp"
        android:layout_height="51dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/primary"
        android:text="Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sucess"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button" />

</androidx.constraintlayout.widget.ConstraintLayout>